<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"> 
    <h1>Update Item</h1>
        <div class="btn-toolbar mb-2 mb-md 0">
            <div class="btn-group- me-2">
                <a class="btn btn-primary" role="button" href="/">Dashboard</a>
            </div>
        </div>
        
       
</div>

<form action="/edit/<%= Updateitem._id %>?_method=PUT" method="POST">
<div class=" row justify-content-center text-align-center align-items-center form-group mb-4">
    <div class="col">
        <label for="ItemName">Item Name</label>
        <input type="text" class="form-control" id="itemname" name="itemname" value="<%= Updateitem.name %>" placeholder="Item Name" required>
    </div>
    <div class="col">
        <label for="CategoryName">Category</label>
        <input type="text" class="form-control" id="category" name="category" value="<%= Updateitem.category %>" placeholder="Category" required>
    </div>
    <div class="col">
        <label for="Quantity">Quantiy</label>
        <input type="number" class="form-control" id="quantiy" name="quantiy" value="<%= Updateitem.quantity %>" placeholder="Quantity" required>
    </div>
    <div class="col">
        <label for="Price">Price</label>
        <input type="text" class="form-control" id="price" name="price" value="<%= Updateitem.price %>" placeholder="Price" required>
    </div> 
</div>
<div class="form-control form-control-md mb-3">
    <label for="descriptionname">Description</label>
    <textarea class="form-control"name="descriptionname" id="description" cols="30" rows="12" placeholder="Description Name"><%= Updateitem.description %></textarea>
</div>

<div class="form-group mb-4">
    <button type="submit" class="btn btn-primary">Update Item</button>
    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
        Delete Item
      </button>

</div>
<b class="h5">Last Updated At: <%=Updateitem.createdAt %></b>
</form>

<!----------------------------------- Modal ------------------------------------------------------>
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Your are about to remove item record</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <p>This Item will remove from the record <b class="fw-bold"><%= Updateitem.name %></b>
                <br>
                Are your sure to delete it?</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <form action="/edit/<%= Updateitem._id %>?_method=DELETE" method="POST" class="position-relative">
            <button type="submit" class="btn btn-primary">Remove Item</button>
          </form>
          
        </div>
      </div>
    </div>
  </div>