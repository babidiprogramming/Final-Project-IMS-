<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"> 
    <h1>Add New Item</h1>
        <div class="btn-toolbar mb-2 mb-md 0">
            <div class="btn-group- me-2">
                <a class="btn btn-primary" role="button" href="/">Dashboard</a>
            </div>
        </div>
        
       
</div>

<form action="/add" method="POST">
<div class=" row justify-content-center text-align-center align-items-center form-group mb-4">
    <div class="col">
        <label for="ItemName">Item Name</label>
        <input type="text" class="form-control" id="itemname" name="itemname" value="" placeholder="Item Name" required>
    </div>
    <div class="col">
        <label for="CategoryName">Category</label>
        <input type="text" class="form-control" id="category" name="category" value="" placeholder="Category" required>
    </div>
    <div class="col">
        <label for="Quantity">Quantiy</label>
        <input type="number" class="form-control" id="quantiy" name="quantiy" value="" placeholder="Quantity" required>
    </div>
    <div class="col">
        <label for="Price">Price</label>
        <input type="text" class="form-control" id="price" name="price" value="" placeholder="Price" required>
    </div> 
</div>
<div class="form-control form-control-md mb-3">
    <label for="descriptionname">Description</label>
    <textarea class="form-control"name="descriptionname" id="description" cols="30" rows="12" placeholder="Description Name"></textarea>
</div>
<div class="form-group mb-4">
    <button type="submit" class="btn btn-primary">Add New Item</button>
</div>
</form>